# .env.template - 복사해서 .env 파일로 사용
# 거래 모드: 'simulation' 또는 'live' (또는 true/false용 SIMULATION_MODE 사용)
SIMULATION_MODE=true
LOG_LEVEL=INFO

# Upbit (실거래 시 필요)
UPBIT_ACCESS_KEY=
UPBIT_SECRET_KEY=

# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Twitter / Reddit
TWITTER_BEARER_TOKEN=
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=

# Email (옵션)
EMAIL_SMTP_SERVER=
EMAIL_SMTP_PORT=587
EMAIL_ADDRESS=
EMAIL_PASSWORD=
EMAIL_RECIPIENT=

# 초기 자본 (백테스트에서 사용 가능)
INITIAL_BALANCE=10000000
